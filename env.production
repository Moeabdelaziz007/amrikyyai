# Production Environment Variables Template
# Copy this to .env and fill in your actual values

# Application
ENVIRONMENT=production
API_V1_STR=/api/v1
SECRET_KEY=your-super-secret-production-key-change-this
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database
DATABASE_URL=postgresql://username:password@postgres:5432/amrikyy_ai
POSTGRES_DB=amrikyy_ai
POSTGRES_USER=amrikyy_user
POSTGRES_PASSWORD=secure_password_here

# Redis
REDIS_URL=redis://:redis_password@redis:6379/0
REDIS_PASSWORD=secure_redis_password

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Vector Database - Pinecone (recommended for production)
VECTOR_DB_TYPE=pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=amrikyy-ai-prod

# Celery
CELERY_BROKER_URL=redis://:redis_password@redis:6379/1
CELERY_RESULT_BACKEND=redis://:redis_password@redis:6379/1

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
PROMETHEUS_ENABLED=true

# Frontend
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Monitoring
GRAFANA_PASSWORD=secure_grafana_password

# SSL/Security
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# File Storage (if using S3)
STORAGE_TYPE=s3
S3_BUCKET=amrikyy-ai-documents
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
